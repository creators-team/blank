{
  "name": "@useblank/ui",
  "version": "1.0.1",
  "bin": {
    "blank-ui": "dist/index.js"
  },
  "files": ["dist/index.js"],
  "scripts": {
    "prebuild": "pnpm run build:registry",
    "build:registry": "tsx scripts/build-registry.ts",
    "build": "pnpm run build:package && turbo build",
    "build:package": "tsup --config tsup.config.ts",
    "predev": "pnpm run build:registry",
    "dev": "turbo dev",
    "dev:package": "tsx scripts/index.ts",
    "lint": "ultracite lint",
    "format": "ultracite format",
    "test": "turbo test",
    "analyze": "turbo analyze",
    "clean": "git clean -xdf node_modules",
    "prepublishOnly": "pnpm run build:package"
  },
  "devDependencies": {
    "@auto-it/first-time-contributor": "^11.3.0",
    "@biomejs/biome": "1.9.4",
    "@types/node": "^22.13.8",
    "tsx": "^4.15.0",
    "turbo": "^2.4.4",
    "typescript": "^5.8.2",
    "ultracite": "^4.1.20"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@10.5.2",
  "type": "module",
  "dependencies": {
    "tsup": "^8.4.0",
    "zod": "^3.24.2"
  }
}
